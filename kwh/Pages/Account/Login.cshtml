@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Log in</title>
</head>
<body>
    <br />
    <div class="row justify-content-center">
        <div class="col-md-4 col-sm-10 text-center">
            <h2 class="py-2">@ViewData["Title"]</h2>
            <form method="post" autocomplete="off">
                <p>Sign in using your email or username.</p>
                <p>@Html.ValidationMessage("CustomErr", new { @class = "text-danger" })</p>
                <div class="form-group text-left">
                    <label asp-for="Input.Username"></label>
                    <input asp-for="Input.Username" class="form-control" placeholder="Username/Email">
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="form-group text-left">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group py-2">
                    <input type="submit" value="Log in" class="btn btn-primary" />
                </div>
                <div>
                    <button class="btn btn-primary py-2" onclick="window.history.back();">&larr; Back</button>
                </div>
            </form>
        </div>
    </div>

    

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</body>
</html>