@page
@model kwh.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Categories";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/wwwroot/css/site.css" rel="stylesheet" type="text/css" />
    <title>Index</title>
</head>
<body>
    <table class="table border-hidden bg-white mb-0 mt-3">
        <thead>
            <tr>
                <th>
                    <a asp-page="./Index" asp-route-sortOrder="@Model.CategorySort">
                        @Html.DisplayNameFor(model => model.Category[0].CategoryName)
                    </a>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Category)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.CategoryId">Edit</a> |
                        <a asp-page="./Delete" asp-route-id="@item.CategoryId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @{
        var prevDisabled = !Model.Category.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.Category.HasNextPage ? "disabled" : "";
    }

    <div class="row p-2">
        <div class="btn-group col-sm-3 p-2">
            <a asp-page="./Index"
               asp-route-sortOrder="@Model.CurrentSort"
               asp-route-pageIndex="@(Model.Category.PageIndex - 1)"
               class="btn btn-primary @prevDisabled">
                <
            </a>
            <a asp-page="./Index"
               asp-route-sortOrder="@Model.CurrentSort"
               asp-route-pageIndex="@(Model.Category.PageIndex + 1)"
               class="btn btn-primary @nextDisabled">
                >
            </a>
        </div>
        <div class="col-sm text-right p-2">
            <input type="button" value="Create +" onclick="window.location.href = 'Categories/Create';" class="btn btn-primary" />
        </div>
    </div>

</body>
</html>
