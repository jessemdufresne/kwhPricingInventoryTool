@page
@model kwh.Pages.Vendors.DeleteModel

@{
    ViewData["Title"] = "Delete Vendor";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <br />
    <div class="justify-content-center text-center">
        <h3>Are you sure you want to delete this?</h3>
        <dl class="row justify-content-center text-center">
            <dt class="col-6 text-right">
                @Html.DisplayNameFor(model => model.Vendor.VendorName)
            </dt>
            <dd class="col-6 text-left">
                @Html.DisplayFor(model => model.Vendor.VendorName)
            </dd>
            <dt class="col-6 text-right">
                @Html.DisplayNameFor(model => model.Vendor.VendorUrl)
            </dt>
            <dd class="col-6 text-left">
                @Html.DisplayFor(model => model.Vendor.VendorUrl)
            </dd>
            <dt class="col-6 text-right">
                @Html.DisplayNameFor(model => model.Vendor.VendorPhone)
            </dt>
            <dd class="col-6 text-left">
                @Html.DisplayFor(model => model.Vendor.VendorPhone)
            </dd>
            <dt class="col-6 text-right">
                @Html.DisplayNameFor(model => model.Vendor.VendorEmail)
            </dt>
            <dd class="col-6 text-left">
                @Html.DisplayFor(model => model.Vendor.VendorEmail)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Vendor.VendorId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a class="btn btn-primary" asp-page="./Index">Back to List</a>
        </form>
    </div>
</body>
</html>
