@page
@model kwh.Pages.Vendors.CreateModel

@{
    ViewData["Title"] = "Add a new vendor";
}

<!DOCTYPE html>

<html>
<head>
    <meta VendorName="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <br />
    <div class="row justify-content-center">
        <h4>@ViewData["Title"]</h4>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-4 col-sm-10 text-left">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Vendor.VendorName" class="control-label"></label>
                    <input asp-for="Vendor.VendorName" class="form-control" placeholder="Example" />
                    <span asp-validation-for="Vendor.VendorName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Vendor.VendorUrl" class="control-label"></label>
                    <input asp-for="Vendor.VendorUrl" class="form-control" placeholder="https://www.example.com" />
                    <span asp-validation-for="Vendor.VendorUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Vendor.VendorPhone" class="control-label"></label>
                    <input asp-for="Vendor.VendorPhone" class="form-control" placeholder="123-456-7890" />
                    <span asp-validation-for="Vendor.VendorPhone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Vendor.VendorEmail" class="control-label"></label>
                    <input asp-for="Vendor.VendorEmail" class="form-control" placeholder="example@example.com" />
                    <span asp-validation-for="Vendor.VendorEmail" class="text-danger"></span>
                </div>
                <div class="row p-2 text-center">
                    <div class="form-group col-sm text-center p-2">
                        <input type="submit" value="Add" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row justify-content-center text-center">
        <a class="btn btn-primary" asp-page="./Index">Back to List</a>
    </div>


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
