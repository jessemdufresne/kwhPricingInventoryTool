@page
@model kwh.Pages.Projects.EditModel

@{
    ViewData["Title"] = "Edit Project";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <br />
    <div class="text-center">
        <h4>Edit Project</h4>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-4 col-sm-10 text-left">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Project.ProjectId" />
                <div class="form-group">
                    <label asp-for="Project.ProjectName" class="control-label"></label>
                    <input asp-for="Project.ProjectName" class="form-control" />
                    <span asp-validation-for="Project.ProjectName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Project.ProjectYear" class="control-label"></label>
                    <input asp-for="Project.ProjectYear" class="form-control" />
                    <span asp-validation-for="Project.ProjectYear" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Project.ProjectCountry" class="control-label"></label>
                    <input asp-for="Project.ProjectCountry" class="form-control" />
                    <span asp-validation-for="Project.ProjectCountry" class="text-danger"></span>
                </div>
                <div class="row p-2">
                    <div class="form-group col-sm text-center p-2">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <input type="button" value="Delete" class="btn btn-danger"
                               onclick="window.location.href = 'Delete?id=' + window.location.search.substring(1).split('=')[1];" />
                        <input type="button" value="Cancel" class="btn btn-secondary" onclick="window.history.back()"/>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
