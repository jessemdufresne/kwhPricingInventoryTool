@page
@model kwh.Pages.Projects.IndexModel

@{
    ViewData["Title"] = "Projects";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/wwwroot/css/site.css" rel="stylesheet" type="text/css" />
    <title>Index</title>
</head>
<body>
    <!--Search Bar-->
    <div class="container mt-3">
        <form asp-page="./Index" method="get">
            <div class="form-actions color-white p-2 d-inline-block">
                <div class="input-group px-2">
                    <input type="text" class="form-control" name="CurrentFilter" value="@Model.CurrentFilter" />
                    <div class="input-group-append">
                        <input class="btn btn-primary " type="submit" value="Search" />
                    </div>
                </div>
            </div>
            <div class="p-2 d-inline-block">
                <a asp-page="./Index">Clear Search</a>
            </div>
        </form>
    </div>

    <div class="mt-3" style="height:400px; overflow-y:scroll">
        <!--Table Header and Rows-->
        <table class="table table-striped border-hidden bg-white mb-0">
            <thead>
                <tr>
                    <th>
                        <a asp-page="./Index" asp-route-SearchBy="@Model.SearchBy"
                           asp-route-CurrentFilter="@Model.CurrentFilter"
                           asp-route-sortOrder="@Model.NameSort">
                            @Html.DisplayNameFor(model => model.Project[0].Name)
                        </a>
                    </th>
                    <th>
                        <a asp-page="./Index" asp-route-SearchBy="@Model.SearchBy"
                           asp-route-CurrentFilter="@Model.CurrentFilter"
                           asp-route-sortOrder="@Model.YearSort">
                            @Html.DisplayNameFor(model => model.Project[0].Year)
                        </a>
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Project[0].Country)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Project)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Year)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Country)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="badge badge-primary">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="row p-2">
        <div class="col-sm text-right p-2">
            <input type="button" value="Create +" onclick="window.location.href = 'Projects/Create';" class="btn btn-primary" />
        </div>
    </div>
</body>
</html>
